<!-- views/display.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <title>Display Data</title>
</head>
<body>
  <h1>Display Data</h1>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Mobile</th>
        <th>Country</th>
        <th>Gender</th>
      </tr>
    </thead>
    <tbody>
      {{#each mongoDBData}}
        <tr>
          <td>{{ this.firstName }}</td>
          <td>{{ this.lastName }}</td>
          <td>{{ this.email }}</td>
          <td>{{ this.password }}</td>
          <td>{{ this.mobile }}</td>
          <td>{{ this.country }}</td>
          <td>{{ this.gender }}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
